{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "$components/(.*)": ["components/$1"],
    },
    "target": "es5",
    "module": "esnext",
    "outDir": "dist",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.ts*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}